<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.RightFragment"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_foreground">
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="搜索"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_form"/>
    <!-- TODO: Update blank fragment layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/gonglve_pager"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    tools:layout_editor_absoluteY="8dp"
                    tools:layout_editor_absoulte_X="8dp">
                </android.support.v4.view.ViewPager>
            <LinearLayout
                android:weightSum="10"
                android:background="#33000000"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:paddingLeft="8dp"    
                android:layout_centerInParent="true"
                android:text="旅游攻略"
                android:layout_gravity="center_vertical"    
                android:textSize="20sp" />
                <LinearLayout
                    android:id="@+id/lineLayout_dot"
                    android:layout_weight="2"
                    android:gravity="center|right"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ToggleButton
                        android:id="@+id/select_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOn="中国"
                        android:textOff="韩国"
                        android:background="@drawable/kr_flag" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <Button
                        android:id="@+id/city_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="城市指南"/>
                    <Button
                        android:id="@+id/food_tr_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="景点美食" />
                    <Button
                        android:id="@+id/info_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="实用信息" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>