<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AboutCityActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_arrow_back_white_35dp"
                android:background="@color/colorPrimaryDark"
                android:onClick="onBack" />
            <android.support.v7.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                app:queryHint="搜索 城市/景点/美食"
                android:iconifiedByDefault="false"
                android:background="@drawable/search_form"/>
        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img"
                android:src="@drawable/kr_img1"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="韩国(首尔)"
                android:textSize="30sp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:text="城市说明"
                    android:textSize="20sp"
                    android:onClick="onCity"
                    android:drawableTop="@drawable/ic_location_city_black_35dp" />
                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:drawableTop="@drawable/ic_terrain_white_35dp"
                    android:text="景点指南"
                    android:onClick="onSight"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_local_dining_black_35dp"
                    android:onClick="onFood"
                    android:text="美食指南"/>
                <Button
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:drawableTop="@drawable/ic_place_white_35dp"
                    android:onClick="onMap"
                    android:text="地图"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>